{
  "hosting": [
    {
      "target": "dev",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/development/**"
      ],
      "redirects": [
        { "source" : "/html", "destination" : "/status", "type" : 301 }
      ],
      "rewrites": [
        { "source": "**", "destination": "/index.html"}
      ]
    },
    {
      "target": "production",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        "**/development/**"
      ],
      "redirects": [
        { "source" : "/html", "destination" : "/status", "type" : 301 }
      ],
      "rewrites": [
        { "source": "**", "destination": "/index.html"}
      ]
    }
  ]
}
